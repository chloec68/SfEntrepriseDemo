{% extends 'base.html.twig' %} 

{% block title %}Détails d'un employe{% endblock %}

{% block body %}
    <h1>Détails de l'employe</h1>
    <h2> {{employe}} </h2>
    <p> Entreprise : <a href="{{ path('display_entreprise', {'id':employe.entreprise.id})}}">{{employe.entreprise}}</a></p>
    <p> Ville :
    {% if employe.ville %}
        {{employe.ville}}
        {% else %}
        <p>"Non reseignée"</p>
    {% endif %} </p>
    <p> Date de naissance : {{employe.dateNaissance | date("d-m-Y")}}<br>
     Âge : {{employe.age}}<br>
     Date d'embauche : {{employe.dateEmbauche | date("d-m-Y")}}</p>
    
{% endblock %}
